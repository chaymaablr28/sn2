{% extends 'base.html.twig' %}

{% block title %}Ingredient index{% endblock %}

{% block main %}
    <h1>Ingredient index</h1>

    <a class="my-3 btn btn-primary" href="{{ path('app_ingredient_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ingredient in ingredients %}
            <tr>
                <td>{{ ingredient.id }}</td>
                <td>{{ ingredient.nom }}</td>
                <td>
                    <a href="{{ path('app_recette_ingredient_show', {'id': ingredient.id}) }}">recettes</a>
                    {% if(ingredient.createdBy.id==app.user.id) %}
                        <a href="{{ path('app_ingredient_show', {'id': ingredient.id}) }}">show</a>
                        <a href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
