{% extends 'base.html.twig' %}

{% block title %}Ingredient{% endblock %}

{% block main %}
    <h1>Ingredient</h1>

    {% if(ingredient.createdBy.id==app.user.id) %}
        <div class="d-flex justify-content-end">
            <a class="btn btn-info mx-2" href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}">edit</a>
        
            {{ include('ingredient/_delete_form.html.twig') }}    
        </div>
    {% endif %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ ingredient.nom }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
